{
    "tasks": [
        {
            "type": "process",
            "label": "gas",
            "command": "/usr/bin/as",
            "args": [
                "-gstabs",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}.o",
                "${file}"
            ]
        },

        {
            "type": "process",
            "label": "nasm",
            "command": "/usr/bin/nasm",
            "args": [
                "-felf64",
                "${file}"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "detail": "Task generated by Debugger."
        },

        {
            "type": "process",
            "label": "link",
            "command": "/usr/bin/ld",
            "args": [
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}.out",
                "${fileDirname}/${fileBasenameNoExtension}.o"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "detail": "Task generated by Debugger."
        },

        {
            "label": "Build NASM",
            "dependsOrder": "sequence",
            "dependsOn": ["nasm", "link"]
        },

        {
            "label": "Build GAS",
            "dependsOrder": "sequence",
            "dependsOn": ["gas", "link"]
        }
    ],
    "version": "2.0.0"
}